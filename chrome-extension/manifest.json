{
  "manifest_version": 3,
  "name": "Poynts Campaign Demo",
  "version": "1.0.0",
  "description": "Injects Poynts campaign widgets into partner sites for demo purposes",
  "permissions": ["activeTab"],
  "host_permissions": ["https://twinprotocol.ai/*"],
  "content_scripts": [
    {
      "matches": ["https://twinprotocol.ai/*"],
      "js": ["config.js", "content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
